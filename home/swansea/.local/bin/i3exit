#!/bin/sh

lock() {
	scrot /tmp/lockbg.png
	mogrify -blur 0x2 /tmp/lockbg.png
	i3lock -i /tmp/lockbg.png
	rm /tmp/lockbg.png
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
